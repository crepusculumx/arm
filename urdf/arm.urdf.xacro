<?xml version = "0.0" ?>

<robot name = "arm">

    <link name="map"/>

    <joint name="base_joint" type="fixed">
        <parent link="map"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.010" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
        <inertial>
            <origin xyz="0 0.5 0.5" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>

        <visual>
            <origin xyz="0 0.5 0.5" rpy="0 0 0" />
            <geometry>
                <box size="1 2 1" />
            </geometry>
            <material name="yellow">
                <color rgba="1 0.4 0 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0.5 0.5" rpy="0 0 0" />
            <geometry>
                <box size="1 2 1" />
            </geometry>
        </collision>
    </link>

    <link name="link0">
        <inertial>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>

        <visual>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="0 0 0" />
            </geometry>
            <material name="black">
                <color rgba="1.0 1.0 1.0 1.0"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="0 0 0" />
            </geometry>
        </collision>
    </link>

    <link name="link1">
        <inertial>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>

        <visual>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="1 1 2" />
            </geometry>
            <material name="Cyan">
                <color rgba="0 1.0 1.0 1.0"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="1 1 2" />
            </geometry>
        </collision>
    </link>
    <link name="link2">
        <inertial>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>

        <visual>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="1 1 2" />
            </geometry>
            <material name="green">
                <color rgba="0 1.0 0 1.0"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="1 1 2" />
            </geometry>
        </collision>
    </link>
    <link name="link3">
        <inertial>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>

        <visual>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="1 1 2" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1.0 1.0"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 1" rpy="0 0 0" />
            <geometry>
                <box size="1 1 2" />
            </geometry>
        </collision>
    </link>


    <joint name="joint0" type="revolute">
        <limit effort="30" velocity="1.0" lower="-1.57" upper="1.57" />
        <parent link="base_link"/>
        <child link="link0"/>
        <origin xyz="0 0 1" rpy="0 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="joint1" type="revolute">
        <limit effort="30" velocity="1.0" lower="-1.0" upper="1.0" />
        <parent link="link0"/>
        <child link="link1"/>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <!-- <axis xyz="0 1 0" /> -->
    </joint>
    <joint name="joint2" type="revolute">
        <limit effort="30" velocity="1.0" lower="-1.57" upper="1.57" />
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 2" rpy="0 0 0" />
        <!-- <axis xyz="0 1 0" /> -->
    </joint>
    <joint name="joint3" type="revolute">
        <limit effort="30" velocity="1.0" lower="0" upper="2" />
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0 0 2" rpy="0 0 0" />
        <!-- <axis xyz="0 1 0" /> -->
    </joint>
</robot>
